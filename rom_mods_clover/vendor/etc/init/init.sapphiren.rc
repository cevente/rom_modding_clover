service vendor.st_nfc_hal_service /vendor/bin/hw/android.hardware.nfc@1.2-service.st
    override
    class hal
    user nfc
    group nfc
    disabled

service stflashtool /vendor/bin/STFlashTool
    override
    class late_start
    group nfc
    user nfc
    oneshot
    disabled

on post-fs && property:ro.boot.hwname=sapphiren
    start stflashtool
    setprop ro.vendor.se.type HCE,UICC

on boot && property:ro.boot.hwname=sapphire
    stop vendor.st_nfc_hal_service

on boot && property:ro.boot.hwname=sapphiren
    start vendor.st_nfc_hal_service
